@model CadastroUsuarioViewMOD
@{
    ViewData["Title"] = "Cadastro";
    Layout = null;
}
<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"] - Brain Flow</title>
    <link rel="stylesheet" href="~/css/fronted/style.css" />
</head>
<body>
<header class="nav">
    <div class="wrap">
        <div class="brand">
            <img src="~/img/logo_branco.png" width="128" height="128" alt="Brain Flow">
        </div>
        <nav class="menu">
            <a href="@Url.Action("Index", "Home")">Home</a>
            <a href="@Url.Action("Cursos", "Home")">Cursos</a>
            <a href="@Url.Action("Login", "Conta")">Login</a>
            <a class="signup" href="@Url.Action("Cadastro", "Conta")">Cadastro</a>
        </nav>
    </div>
</header>

<main class="page">
    <div class="grid">
        <h1>Criar Conta</h1>
        <p class="sub">Já tem conta? <a href="@Url.Action("Login", "Conta")">Entrar</a></p>

        <form class="card" asp-action="Cadastro" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-row">
                <label asp-for="Nome">Nome completo</label>
                <input asp-for="Nome" type="text" placeholder="Seu nome" required />
                <span asp-validation-for="Nome" class="text-danger small"></span>
            </div>
            
            <div class="form-row">
                <label asp-for="Email">Email</label>
                <input asp-for="Email" type="email" placeholder="Seu email" required />
                <span asp-validation-for="Email" class="text-danger small"></span>
            </div>
            
            <div class="form-row">
                <label asp-for="Senha">Senha</label>
                <input asp-for="Senha" type="password" placeholder="Crie uma senha" required />
                <span asp-validation-for="Senha" class="text-danger small"></span>
            </div>
            
            <div class="form-row">
                <label asp-for="ConfirmacaoSenha">Confirmar senha</label>
                <input asp-for="ConfirmacaoSenha" type="password" placeholder="Repita a senha" required />
                <span asp-validation-for="ConfirmacaoSenha" class="text-danger small"></span>
            </div>
            
            <div class="actions">
                <button class="btn primary" type="submit">Cadastrar</button>
            </div>
        </form>
    </div>
</main>

<footer class="footer">
    <div class="wrap footer-inner">
        <span>© Brain Flow</span>
        <nav class="footer-nav">
            <a href="#">Sobre</a>
            <a href="#">Suporte</a>
            <a href="#">Termos</a>
        </nav>
    </div>
</footer>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="~/lib/jquery-validation/dist/additional-methods.min.js"></script>
<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
