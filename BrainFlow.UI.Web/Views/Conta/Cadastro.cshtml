                                <label class="form-label" for="Email">E-mail</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-envelope"></i></span>
                                    <input asp-for="Email" class="form-control" placeholder="Digite seu e-mail" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="mb-2">
                                <label class="form-label" for="Senha">Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="Senha" class="form-control" type="password" placeholder="Digite sua senha" />
                                </div>
                                <span asp-validation-for="Senha" class="text-danger small"></span>
                            </div>
                            <div class="mb-4">
                                <label class="form-label" for="ConfirmacaoSenha">Confirmação de Senha</label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    <input asp-for="ConfirmacaoSenha" class="form-control" type="password" placeholder="Confirme sua senha" />
                                </div>
                                <span asp-validation-for="ConfirmacaoSenha" class="text-danger small"></span>
