@model CursoIndexViewMOD
@{
    ViewData["Title"] = "Meus Cursos";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div class="d-flex align-items-center">
            <i class="fas fa-graduation-cap fa-2x text-primary me-3"></i>
            <h2 class="mb-0">Meus Cursos</h2>
        </div>
        <a asp-action="Criar" class="btn btn-green">
            <i class="fas fa-plus me-1"></i> Adicionar Novo Curso
        </a>
    </div>
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form asp-action="Index" method="get">
                <div class="row g-3 align-items-end">
                    <div class="col-md-9">
                        <label for="pesquisaNomeCurso" class="form-label text-gray-medium">Buscar por Nome do Curso</label>
                        <input type="text" class="form-control" id="pesquisaNomeCurso" name="pesquisaNomeCurso" placeholder="Digite o nome do curso..." value="@Model.PesquisaNomeCurso">
                    </div>
                    <div class="col-md-3 d-flex">
                        <button type="submit" class="btn btn-primary w-100 me-2">
                            <i class="fas fa-search me-2"></i>Buscar
                        </button>
                        <a asp-action="Index" class="btn btn-outline-primary w-100">
                            <i class="fas fa-times me-2"></i>Limpar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <div>
        <small class="text-muted">Total de Cursos: <strong>@Model.Cursos.Count</strong></small>
    </div>
    <div class="row g-4 mt-2 mb-4">
        @if (Model.Cursos != null && Model.Cursos.Any())
        {
            @foreach (var curso in Model.Cursos)
            {
                <div class="col-sm-12 col-md-6 col-lg-4">
                    <div class="card h-100 shadow-sm">

                        @if (!string.IsNullOrEmpty(curso.TxCaminhoImagem))
                        {
                            <img src="@curso.TxCaminhoImagem" class="card-img-top" alt="@curso.NoCurso" style="height: 150px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="/images/default_course.png" class="card-img-top" alt="Capa Padrão" style="height: 150px; object-fit: cover;" />
                        }
                        <div class="card-body d-flex flex-column">
                            <h4 class="card-title fw-bold text-primary mb-2">@curso.NoCurso</h4>
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <p class="card-text mb-0 text-gray-medium">
                                    Valor:
                                    <span class="fw-bold">
                                        @curso.DcValor.ToString("C", new System.Globalization.CultureInfo("pt-BR"))
                                    </span>
                                </p>
                                <span class="badge rounded-pill @((curso.SnAprovado == true) ? "bg-success" : "bg-warning") text-white">@(curso.SnAprovado == true ? "Aprovado" : "Pendente")</span>
                            </div>
                            <div class="mt-auto">
                                <a asp-action="Detalhes" asp-route-id="@curso.CdCurso" class="btn btn-outline-primary w-100">
                                    <i class="fas fa-cog me-1"></i> Gerenciar
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="col-12 text-center text-gray-medium mt-5">
                <h3>Nenhum curso encontrado.</h3>
                <h4>Que tal<a asp-action="Criar" class="btn btn-green h6 ms-2 me-1"><span class="fas fa-plus me-2"></span>adicionar seu primeiro curso</a>?</h4>
            </div>
        }
    </div>
</div>