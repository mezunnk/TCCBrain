@model List<ModuloMOD>

<div class="tab-pane fade" id="modulos" role="tabpanel" aria-labelledby="modulos-tab">
    <h4 class="text-dark-gray mb-3">Módulos do Curso</h4>
    <button type="button" class="btn btn-primary mb-3" id="btnAdicionarModulo">
        <i class="fas fa-plus me-1"></i> Adicionar Módulo
    </button>
    <div class="table-responsive">
        <table class="table table-striped table-hover mt-3">
            <thead>
                <tr>
                    <th class="bg-light">Ordem</th>
                    <th class="bg-light">Nome do Módulo</th>
                    <th class="bg-light">Descrição</th>
                    <th class="bg-light text-center">Ações</th>
                </tr>
            </thead>
            <tbody id="modulosSortable">
                @if (Model != null && Model.Any())
                {
                    @foreach (var item in Model.OrderBy(m => m.NrOrdem))
                    {
                        <tr data-id="@item.CdModulo">
                            <td>@item.NrOrdem</td>
                            <td>@item.NoModulo</td>
                            <td>@item.TxDescricao</td>
                            <td class="text-center">
                                <a href="#" class="text-primary fs-5 btn-editar-modulo" title="Editar Módulo"
                                   data-bs-toggle="modal"
                                   data-bs-target="#modalAdicionarEditarModulo"
                                   data-id="@item.CdModulo"
                                   data-nome="@item.NoModulo"
                                   data-descricao="@item.TxDescricao">
                                    <i class="fas fa-edit me-2"></i>
                                </a>
                                <a href="#" class="text-red fs-5 btn-remover-modulo" title="Remover Módulo"
                                   data-bs-toggle="modal"
                                   data-bs-target="#modalRemoverModulo"
                                   data-id="@item.CdModulo"
                                   data-nome="@item.NoModulo">
                                    <i class="fas fa-trash me-2"></i>
                                </a>
                                <span class="fas fa-bars text-gray-medium" style="cursor: grab;"></span>
                            </td>
                        </tr>
                    }
                }
                else
                {
                    <tr>
                        <td colspan="4" class="text-center text-muted">Nenhum módulo cadastrado para este curso.</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>